---
import { NavbarRoutes } from "@core/lib/routes";
const currentPath = Astro.url.pathname;
---

<nav class="fixed w-full h-20 flex items-center justify-between z-10">
    <div class="h-full px-8 items-center uppercase flex tracking-wider text-xl ">
        <h1 class="logo">CLEAN—UI</h1>
    </div>
	
    <div class="w-3/4 flex px-8 gap-8 xl:gap-16 justify-end h-full">
        {
            NavbarRoutes.map((routes,i) =>{ 
                const isActive = routes.route.includes(currentPath);
                return(
                // <TransitionLink
                // 	client:idle
                // 	disabled={isActive}
                // 	to={routes.route[0]}
                // 	className={`text-base ${isActive ? 'text-accent' : 'text-black'}  hover:text-accent w-fit h-fit transition-all duration-300 "`}
                // >
                    <a href={routes.route[0]} class={`navbar uppercase flex text-nowrap items-center tracking-wider text-xl `}>
                        <p>{routes.name}</p>
                        <p class="">—0{i+1}</p>
                    </a>

                // </TransitionLink>
            )})
        }
    </div>
</nav>

<script>
    import { waveEffect, fadeInSlideFromLeft } from "@core/lib/animations";
    document.addEventListener('DOMContentLoaded', () => {
        waveEffect({
            className:"navbar",
            y: 25,
            timing: 0.03,
			duration: 1,
        })
        fadeInSlideFromLeft({
            className:"logo",
            duration:0.8
        })
	});
</script>